<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contact_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:layout_marginBottom="@dimen/parent_top_margin"
    style="@style/AppTheme"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <ImageView
        android:id="@+id/contact_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:srcCompat="@drawable/ic_person_outline_black_24dp"
        app:layout_constraintTop_toTopOf="@id/contact_layout"
        app:layout_constraintStart_toStartOf="@id/contact_layout"
        app:layout_constraintEnd_toEndOf="@id/contact_layout"
        android:backgroundTint="@color/colorLightGray"
        />

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/first_name_hint"
        app:layout_constraintTop_toBottomOf="@id/contact_image"
        style="@style/textView"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         app:layout_constraintTop_toBottomOf="@id/contact_name"
        android:id="@+id/contact_buttons_group"
        android:paddingTop="@dimen/drawable_padding"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/contact_name">

            <Button
                android:id="@+id/call_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_phone_black_24dp"
                android:text="@string/call_button_label"
                style="@style/actionButtons"
                />

            <Button
                android:id="@+id/text_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_sms_black_24dp"
                android:text="@string/text_button_label"
                style="@style/actionButtons"
                />

            <Button
                android:id="@+id/email_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_email_black_24dp"
                android:text="@string/email_button_label"
                style="@style/actionButtons"
                android:onClick="onSMSButtonClick"
                />
            <Button
                android:id="@+id/map_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_directions_black_24dp"
                android:text="@string/directions_button_label"
                style="@style/actionButtons"
                />
            <Button
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_public_black_24dp"
                android:text="@string/web_button_label"
                style="@style/actionButtons"
                />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/phone_hint"
        app:layout_constraintTop_toBottomOf="@id/contact_buttons_group"
        android:drawableStart="@drawable/ic_phone_black_24dp"
        style="@style/textView"
        />

    <TextView
        android:id="@+id/email_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email_hint"
        app:layout_constraintTop_toBottomOf="@id/phone_number"
        android:drawableStart="@drawable/ic_email_black_24dp"
        style="@style/textView"
        />

    <TextView
        android:id="@+id/address_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/address_hint"
        app:layout_constraintTop_toBottomOf="@id/email_info"
        android:drawableStart="@drawable/ic_place_black_24dp"
        style="@style/textView"
        />

    <TextView
        android:id="@+id/web_into"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/website_hint"
        android:drawableStart="@drawable/ic_public_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/address_info"
        style="@style/textView"
        />
    </LinearLayout>
</ScrollView>
